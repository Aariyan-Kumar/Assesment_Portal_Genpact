    function redirectToPage() {
    	var testId = <%= testId%>
        window.location.href = 'updateQuestions.jsp?id=' + testId; // Replace 'targetPage.jsp' with the desired URL
    }
</script>
<body>
	<header>
    	<h1>Welcome to Edit Test Page</h1>
	</header>
